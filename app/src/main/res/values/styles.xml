<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <!-- Main theme colors -->
        <!-- customize the color palette -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="popupMenuStyle">@style/MyPopupMenu</item>
        <item name="textAppearanceLargePopupMenu">@style/myPopupMenuTextAppearanceLarge</item>
        <item name="textAppearanceSmallPopupMenu">@style/myPopupMenuTextAppearanceSmall</item>
    </style>

    <!-- Buttons-->
    <style name="ButtonTheme" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/button_color</item>

        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="ButtonThemeWord" parent="ButtonTheme">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="button_group">
        <item name="android:padding">8dp</item>
    </style>


    <!-- Input-->
    <style name="inputTheme" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/primary_text_default_material_dark</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- History view-->
    <style name="historyInputTheme">
        <item name="android:textColor">@color/secondary_text_default_material_light</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="historyResultTheme">
        <item name="android:textColor">@color/primary_text_default_material_light</item>
        <item name="android:textSize">30sp</item>
    </style>

    <!-- Popup Menu-->
    <style name="menuTheme" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/abc_primary_text_material_light</item>
    </style>

    <style name="MyPopupMenu" parent="Widget.AppCompat.Light.PopupMenu">
        <item name="android:textColor">@color/secondary_text_default_material_light</item>
    </style>
    <style name="myPopupMenuTextAppearanceSmall" parent="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/secondary_text_default_material_light</item>
    </style>
    <style name="myPopupMenuTextAppearanceLarge" parent="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/secondary_text_default_material_light</item>
    </style>
</resources>
