<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="inputTheme" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/primary_text_default_material_dark</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="ButtonTheme" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/button_color</item>

        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="ButtonThemeWord" parent="ButtonTheme">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="button_group">
        <item name="android:padding">16dp</item>
    </style>

</resources>