<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <!-- Recycler View-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/editText"
        android:scrollbars="vertical"
        tools:listitem="@layout/my_text_view"
        android:layout_alignParentTop="true"/>

    <!-- Input Box-->
    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button_calculate"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/button_calculate"
        android:editable="false"
        android:ems="10"
        android:hint="@string/input_text"
        android:inputType="text"
        android:layout_above="@+id/row4"/>

    <!-- Calculate Button-->
    <Button
        android:id="@+id/button_calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:onClick="calculateResult"
        android:text="@string/calc_button"
        android:layout_above="@+id/row4"/>

    <!-- 7, 8, 9, and /-->
    <LinearLayout
        android:id="@+id/row4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@+id/row3">

        <Button
            android:id="@+id/button7"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:onClick="buttonPressed"
            android:text="@string/button7"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button8"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:onClick="buttonPressed"
            android:text="@string/button8"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button9"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:onClick="buttonPressed"
            android:text="@string/button9"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button_div"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:onClick="buttonPressed"
            android:text="@string/button_div"
            android:layout_weight="1"/>
    </LinearLayout>

    <!-- 4, 5, 6, and *-->
    <LinearLayout
        android:id="@+id/row3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@+id/row2">

        <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:onClick="buttonPressed"
            android:text="@string/button4"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:onClick="buttonPressed"
            android:text="@string/button5"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:onClick="buttonPressed"
            android:text="@string/button6"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button_times"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:onClick="buttonPressed"
            android:text="@string/button_times"
            android:layout_weight="1"/>
    </LinearLayout>

    <!-- 1, 2, 3, and - -->
    <LinearLayout
        android:id="@+id/row2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@+id/row1">

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonPressed"
            android:text="@string/button1"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonPressed"
            android:text="@string/button2"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonPressed"
            android:text="@string/button3"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonPressed"
            android:text="@string/button_minus"
            android:layout_weight="1"/>
    </LinearLayout>

    <!-- ., 0, =, and + -->
    <LinearLayout
        android:id="@+id/row1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/button_decimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonPressed"
            android:text="@string/button_decimal"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonPressed"
            android:text="@string/button0"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button_equals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonPressed"
            android:text="@string/button_equals"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonPressed"
            android:text="@string/button_plus"
            android:layout_weight="1"/>
    </LinearLayout>


</RelativeLayout>
